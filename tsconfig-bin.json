// Used for building the intern executable script, which doesn't need exported
// typings
{
  "extends": "./tsconfig-lib.json",
  "compilerOptions": {
    // Disable declarations and source maps for the executables
    "declaration": false
  },
  "include": [
    "src/cli/*.ts",
    "src/bin/*.ts"
  ],
  "exclude": [
    "src/core/browser/**",
    "src/core/lib/browser/**"
  ]
}

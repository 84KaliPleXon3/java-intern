// Used for building the intern executable script, which doesn't need exported
// typings
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Disable declarations and source maps for the executables
    "declaration": false,
    "outDir": "./_build",
    "removeComments": true,
    "sourceMap": true,
  },
  "include": [
    "src/cli/*.ts",
    "src/bin/*.ts"
  ]
}

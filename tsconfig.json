{
	"extends": "./node_modules/@theintern/dev/tsconfig-base.json",
	"compilerOptions": {
		"declaration": true,
		"lib": [
			"es5",
			"es2015.collection",
			"es2015.promise",
			"es2015.symbol",
			"es2015.symbol.wellknown",
			"es2015.iterable",
			"dom"
		],
		"module": "umd",
		"outDir": "./_build",

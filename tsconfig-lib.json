// Used for building the main intern library
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "./_build",
    "removeComments": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/core/browser/**",
    "src/core/lib/browser/**",
    "src/bin/**",
    "src/cli/**"
  ]
}

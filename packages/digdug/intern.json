{
  "$schema": "../core/schemas/config.json",
  "coverage": ["src/**/*.ts"],
  "filterErrorStack": true,
  "functionalRetries": 1,
  "plugins": "tests/globalUi.ts",
  "node": {
    "tsconfig": "tests/tsconfig.json"
  },
  "reporters": [
    {
      "name": "runner",
      "options": { "hideSkipped": "~", "hidePassed": "." }
    },
    "htmlcoverage"
  ],
  "suites": [
    "tests/unit/**/*.ts",
    "tests/integration/**/*.ts",
    // disabled while using npm for CBT
    "!tests/integration/CrossBrowserTesting*.ts"
  ]
}

{
  "$schema": "./../../schemas/config.json",
  "node": {
    "reporters": {
      "name": "runner",
      "options": { "hideSkipped": "~", "hidePassed": "." }
    }
  },
  "configs": {
    "baseCi": {
      "description": "Run CI tests on the default cloud service (BrowserStack)",
      // Include an empty node+ to allow passthrough extension
      "node+": {},
      "reporters+": {
        "name": "jsoncoverage",
        "options": {
          "filename": "coverage.json"
        }
      },
      "tunnel": "browserstack",
      "maxConcurrency": 2,
      "capabilities+": {
        "idle-timeout": 60
      },
      "environments": [
        { "browser": "node" },
        { "browser": "internet explorer", "version": "11" },
        {
          "browser": "firefox",
          "version": ["latest-3", "latest"],
          "platform": ["WINDOWS", "MAC"]
        },
        {
          "browser": "chrome",
          "version": ["latest-3", "latest"],
          "platform": ["WINDOWS", "MAC"]
        },
        { "browser": "safari", "version": "latest" }
      ]
    }
  }
}
